generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(uuid())
  email     String
  name      String
  bookings  Booking[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Barberclock {
  id          String               @id @default(uuid())
  name        String
  address     String
  phones      String[]
  description String
  imageUrl    String
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
  services    BarberclockService[]
}

model BarberclockService {
  id            String      @id @default(uuid())
  name          String
  description   String
  imageUrl      String
  price         Decimal     @db.Decimal(10, 2)
  barberclockId String
  barberclock   Barberclock @relation(fields: [barberclockId], references: [id])
  bookings      Booking[]
}

model Booking {
  id        String             @id @default(uuid())
  userId    String
  user      User               @relation(fields: [userId], references: [id])
  serviceId String
  service   BarberclockService @relation(fields: [serviceId], references: [id])
  date      DateTime
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
}
